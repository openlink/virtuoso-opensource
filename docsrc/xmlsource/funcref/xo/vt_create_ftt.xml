<refentry id="fn_vt_create_ftt">
  <refmeta>
    <refentrytitle>VT_CREATE_FTT</refentrytitle>
    <refmiscinfo>ft</refmiscinfo>
  </refmeta>
  <refnamediv>
    <refname>VT_CREATE_FTT</refname>
    <refpurpose>create a free text trigger</refpurpose>
  </refnamediv>
  <refsynopsisdiv>
    <funcsynopsis id="fsyn_vt_create_ftt"> 
      <funcprototype id="fproto_vt_create_ftt">
	  <funcdef>DB.DBA.<function>VT_CREATE_FTT</function></funcdef>
	  <paramdef>in <parameter>target_table </parameter>varchar </paramdef>
	  <paramdef>in <parameter>opt_id_column or NULL </parameter>varchar </paramdef>
	  <paramdef>in <parameter>opt_data_column or NULL </parameter>varchar </paramdef>
        <paramdef>in <parameter>suppress_error_return </parameter>integer </paramdef>
      </funcprototype>
    </funcsynopsis>
  </refsynopsisdiv>
  <refsect1 id="desc_vt_create_ftt"><title>Description</title>
    <para>Creates a free text trigger on the target table</para>
  </refsect1>
  <refsect1 id="params_vt_create_ftt"><title>Parameters</title>
    <refsect2><title>target_table</title>
      <para>the table to create the trigger for</para></refsect2>
    <refsect2><title>opt_id_column</title>
      <para>the column for unique identification of document</para></refsect2>
    <refsect2><title>opt_data_column</title>
      <para>the column where content is stored</para></refsect2>
    <refsect2><title>suppress_error_return</title>
      <para>a boolean integer, 1 meaning true</para></refsect2>
  </refsect1>
  <refsect1 id="seealso_vt_create_ftt"><title>See Also</title>
    <para><link linkend="fn_vt_drop_ftt">vt_drop_ftt()</link></para>
    <para><link linkend="fn_vt_batch">vt_batch()</link></para>
    <para><link linkend="fn_vt_batch_update">vt_batch_update()</link></para>
    <para><link linkend="fn_vt_batch_feed">vt_batch_feed()</link></para>
  </refsect1>
</refentry>


