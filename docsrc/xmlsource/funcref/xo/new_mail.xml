<refentry id="fn_new_mail">
  <refmeta>
    <refentrytitle>new_mail</refentrytitle>
    <refmiscinfo>mail</refmiscinfo>
  </refmeta>
  <refnamediv>
    <refname>new_mail</refname>
    <refpurpose>Adds a message to the mail system table</refpurpose>
  </refnamediv>
  <refsynopsisdiv>
    <funcsynopsis id="fsyn_new_mail">
      <funcprototype id="fproto_new_mail">
        <funcdef><function>NEW_MAIL</function></funcdef>
        <paramdef>in <parameter>user </parameter>varchar</paramdef>
        <paramdef>in <parameter>message_body </parameter>blob</paramdef>
      </funcprototype>
    </funcsynopsis>
  </refsynopsisdiv>
  <refsect1 id="desc_new_mail"><title>Description</title>
    <para>Adds a message to the system table DB.DBA.MAIL_MESSAGE.</para>
  </refsect1>
  <refsect1 id="params_new_mail"><title>Parameters</title>
    <refsect2>
      <title>user</title>
      <para>User name of a WebDAV account.</para>
    </refsect2>
    <refsect2>
      <title>message_body</title>
      <para>Rfc822 message (incl. To: , From: etc. headers and body)
      to be inserted.</para>
    </refsect2>
  </refsect1>
</refentry>



