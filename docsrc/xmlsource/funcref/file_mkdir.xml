	  <row>
	    <entry><errorcode>42000</errorcode></entry>
	    <entry><errorcode>FA014</errorcode></entry>
	    <entry><errorname>Access to %s is denied due to access control in ini file</errorname></entry>
	    <entry></entry>
	  </row>
	  <row>
	    <entry><errorcode>42000</errorcode></entry>
	    <entry><errorcode>FA015</errorcode></entry>
	    <entry><errorname>Access to %s is denied due to access control in ini file</errorname></entry>
	    <entry></entry>
	  </row>
	</tbody>
      </tgroup>
    </table>
  </refsect1>
