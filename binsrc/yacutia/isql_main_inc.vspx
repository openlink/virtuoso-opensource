	    </v:before-render>
	  </v:check-box>
	  <label for="t_src">WebDAV source</label>
	<v:template name="locsrc" type="simple" condition="equ(self.is_dav_src,0)">
	  <v:check-box xhtml_id="t_lsrc" name="src_utype" value="1" auto-submit="1">
	    <v:before-render>
	      control.ufl_selected := self.local_src;
	    </v:before-render>
	  </v:check-box>
	  <label for="t_lsrc">Local file</label>
       </v:template>
	</td>
