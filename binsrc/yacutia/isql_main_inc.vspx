                          <![CDATA[
  self.adv_mode := 1;
  self.sql_text := get_keyword ('isql_c_text_', e.ve_params, self.sql_text);
  self.vc_data_bind(e);
                          ]]>
                        </v:on-post>
                      </v:button>
                    </td>
                  <td class="page_tab_empty" align="center" width="100%">
                    <table cellpadding="0" cellspacing="0">
                      <tr>
                        <td width="100%">
                        </td>
                      </tr>
