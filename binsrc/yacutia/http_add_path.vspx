                <input type="button" name="browse_ssbrow" value="Browse..."
                onClick="javascript: doBrowse('?sid=<?V self.sid ?>&realm=<?V self.realm ?>', 't_ssbrow', 't_ssbrow', 0, document.frm_edit_path.c_is_dav.checked)" />
              </td>
