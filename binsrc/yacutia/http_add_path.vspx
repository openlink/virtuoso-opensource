                <input type="button" name="browsedefpage" value="Browse..."
                onClick="javascript: doBrowse('?sid=<?V self.sid ?>&realm=<?V self.realm ?>', 't_defpage', 't_ppath', 0, document.frm_edit_path.c_is_dav.checked)" />
