				    self.t_save.vc_enabled := 0;
				    self.step := 0;
				    self.t_qry.vc_data_bind (e);
				  </v:on-post>
				</v:button>
			      </td>
			    </tr>
			  </table>
			</v:form>
		      </v:template>
