<bpel-process id="Flow" src="Flow.bpel" wsdlLocation="Flow.wsdl">
    <!-- this bpel process invokes the services defined by the following wsdls -->
    
    <properties id="UnitedLoanService">
        <property name="wsdlLocation">
        	http://m6:9700/collaxa/default/UnitedLoan/UnitedLoan?wsdl
        </property>
    </properties>     
    
    <properties id="AmericanLoanService">
        <property name="wsdlLocation">
        	http://m6:9700/collaxa/default/AmericanLoan/AmericanLoan?wsdl 
        </property>
    </properties>     

	<!-- Optional property used to customize the BPEL console test form. -->
    <properties id="console-testForm">
        <property name="introduction">
		<![CDATA[
	    This BPEL process shows how the flow actiivity can be used to 
        create parallel paths of execution within a BPEL process.
        In this example, the BPEL process invokes the LoanService twice
        in parallel.
	    ]]>        
        
        </property>       
    </properties>

</bpel-process>