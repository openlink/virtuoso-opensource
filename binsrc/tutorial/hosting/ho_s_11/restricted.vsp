  declare err varchar;
  declare op varchar;
  declare res integer;

  op := atoi ({?'op'});
  res := 0;
  err := '';

  if (op = 1)
    res := Rest::IntegerTest ();

  declare exit handler for sqlstate '*' { err := __SQL_MESSAGE; };
    {
      if (op = 2)
	res := Rest::FileAccessTest (concat (TUTORIAL_ROOT_DIR(),'/tutorial/hosting/ho_s_11/unrestricted.cs'));

      if (op = 3)
	res := Rest::GetEnvTest ();

      if (op = 4)
	res := InternetConnect().Call_Hotmail ('', '');
    }

?>
