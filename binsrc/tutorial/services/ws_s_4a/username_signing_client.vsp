declare result any;
declare a, b int;
declare resp,inp,outp any;

resp := null;
if ({?'exec'} is not null)
  {
    a := atoi (get_keyword ('a', params, '0'));
    b := atoi (get_keyword ('b', params, '0'));
   connection_set ('__soap_ws_trust_user', {?'uid'});
   connection_set ('__soap_ws_trust_pass', {?'pwd'});
    resp := (
      SOAP_CLIENT (
	  url=>{?'url'},
	  operation=>'AddInt',
	  parameters=>vector (vector ('a', 'int'), a, vector ('b', 'int'), b),
	  auth_type=>'key',
	  security_type=>'sign',
	  target_namespace=>'http://temp.uri/',
	  soap_action=>'"http://temp.uri/#AddInt"',
	  style=>6,
	  template=>'[func:DB.DBA.SOAP_WS_TRUST_XENC_TEMPLATE]'
          , security_schema => vector ('wsse', WSSE_OASIS_URI (),'wsu', WSSU_OASIS_URI())
	  ));
  }
?>
<html>
<HEAD><link rel="stylesheet" type="text/css" href="../demo.css" /></HEAD>
<body>
<H3>Username Token signing client</H3>
<form method="post" action="<?= http_path() ?>" name="mform">
<table class="tableentry">
<tr><td>1. Enter the endpoint URL</td><td>
<input type="text" name="url" size="100" value="http://localhost:<?=server_http_port()?>/SecureWebServices" />
</td></tr>
<tr><td>2. Enter username</td><td>
<input type="text" name="uid" size="15" value="demo" />
</td></tr>
<tr><td>2. Enter password</td><td>
<input type="password" name="pwd" size="15" value="demo" />
</td></tr>
<tr><td>3. Enter a two numbers to calculate sum</td><td>
<input type="text" name="a" size="15" value="0" />
<input type="text" name="b" size="15" value="0" />
</td></tr>
<tr><td>4. Call the AddInt</td><td><input type="submit" name="exec" value="Calculate"></td></tr>
</table>
</form>
<?vsp
  if (resp is not null) {
  declare inx, oux, atts any;
  inp := resp[1];
  outp := resp[2];
  atts := resp[4];
  inx := xslt (TUTORIAL_XSL_DIR () || '/tutorial/services/raw.xsl', xml_tree_doc (inp), vector ('body', 0));
  oux := xslt (TUTORIAL_XSL_DIR () || '/tutorial/services/raw.xsl', xml_tree_doc (outp), vector ('body', 0));
?>
  <table>
  <tr>
    <td>
    Request
    </td>
  </tr>
  <tr>
    <td>
    <div class="filelist">
    <?vsp http_value (inx, null); ?>
    </div>
    </td>
  </tr>
  <tr>
  <tr>
    <td>
    Response
    </td>
  </tr>
    <td>
    <div class="filelist">
    <?vsp http_value (oux, null); ?>
    </div>
    </td>
  </tr>
  </table>
<?vsp
  }
?>


