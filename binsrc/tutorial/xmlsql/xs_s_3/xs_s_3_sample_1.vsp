  declare body varchar;
  if ({?'file'} is not null)
    {
      select XT_TEXT into body from XML_TEXT2 where XT_FILE = {?'file'};
      declare ses any;
      ses := string_output ();
      http ('<html><head><link rel="stylesheet" type="text/css" href="../demo.css"></head><body>');
      http_value (body, 'pre', ses);
      http (string_output_string (ses));
      http ('</body></html>');
      return;
    }
?>
<html>
<head><link rel="stylesheet" type="text/css" href="../demo.css"></head>
<body>
<table class="tableentry">
<form method="post" action="xs_s_3_sample_1.vsp">
<tr>
 <td>1. Enter the search text</td>
 <td><input type="text" name="qry" value=""></td>
</tr>
<tr>
 <td>2. Look up titles</td>
 <td><input type="submit" name="exec" value="Execute"></td>
</tr>
</form>
</table>
<table class="tableresult">
<?vsp
  if ({?'exec'} is not null)
    {
?>
<th>Title</th><th>File name</th>
<?vsp
      for select XT_FILE, cast (p as varchar) descr from XML_TEXT2 where xpath_contains (XT_TEXT, sprintf ('//title [.like''%s%%'' ]', {?'qry'}), p) do {
?>
        <tr><td><?=descr?></td><td><a href="xs_s_3_sample_1.vsp?file=<?=XT_FILE?>"><?=XT_FILE?></a></td></tr>
<?vsp
      }
    }
?>
</table>
</body>
</html>
