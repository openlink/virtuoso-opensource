  declare ostr varchar;
  ostr := '';
  if ({?'trf'} = 'Transform')
    {
      declare body, ses any;
      declare enc varchar;
      select XT_TEXT into body from XML_TEXT2 where XT_FILE = {?'file'};
      set http_charset={?'enc'};
