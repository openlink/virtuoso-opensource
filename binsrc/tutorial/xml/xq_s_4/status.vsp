<html>
  <head>
    <meta HTTP-EQUIV="REFRESH" content="5; URL=status.vsp">
</head>
<body>
  <H1>Demo initialization status</H1>
  <p>
  <?vsp 
    declare stat, ostat any;
  stat := registry_get ('xq_s_4_stat');
  http_flush (1);
  ostat := '';
  while (isstring (stat) and stat not in ('done', 'error'))
    {
      if (ostat <> stat)
        { 
  ?>
  Downloading URL: <?V stat ?> </br>
  <?vsp 
        } 
      commit work;
      http_flush (1);
      ostat := stat;
      delay (5);
      stat := registry_get ('xq_s_4_stat');
    }
  if (stat = 'done')
    { 
  ?>
  <P>Finished</P>
  <?vsp 
    }
  else if (stat = 'error')
    { 
  ?>
  <P>Interrupted</P>
  <?vsp 
    }
  ?>
</body>
</html>
