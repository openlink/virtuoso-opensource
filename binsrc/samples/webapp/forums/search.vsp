<?vsp http (FORI_SEARCH_NAVIGATION (sprintf('search.vsp?q=%s&wh=%s&rs=%d&c=%d&sid=%s&', aquery, awhat, aresults, acount, sid), acount, askipped, aresults)); ?>        
</page>
