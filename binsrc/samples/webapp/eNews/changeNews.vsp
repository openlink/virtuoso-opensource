<script language="JavaScript1.2">
function Channel(ChID, Chan)
{
  this.ChID = ChID;
  this.Chan = Chan;
}

function Category(ChID, CatID, Cat, Chosen)
{
  this.ChID = ChID;
  this.CatID = CatID;
  this.Cat = Cat;
  this.Chosen = Chosen;
}


<?vsp

