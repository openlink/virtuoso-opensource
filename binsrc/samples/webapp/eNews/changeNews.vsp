    {
      ChArr := sprintf('%s  new Channel(%d, "%s")', ChArr, ChID, Channel);
      i := i + 1;
      if (i <> lastRec)
        ChArr := sprintf('%s,\n', ChArr);
      else
        ChArr := sprintf('%s);\n', ChArr);
