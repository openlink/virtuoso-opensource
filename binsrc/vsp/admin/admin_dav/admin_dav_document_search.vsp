			     if (RES_FULL_PATH <> _res_name_sav)
			       {
			         _res_name_sav := RES_FULL_PATH;

			 http ('<TABLE CLASS="genlist" BORDER="0" CELLPADDING="0" CELLSPACING="0"><TR><TD VALIGN="top">');
