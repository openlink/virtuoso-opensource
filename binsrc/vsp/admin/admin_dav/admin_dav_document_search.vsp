			 http ('<BR />');

-- there
			 http ('<TABLE><TR><TD><IMG SRC="../images/1x1.gif" WIDTH="2" HEIGHT="10" ALT=""></TD></TR></TABLE>');

			     if (inx = _maxres) goto done;
