              </tr>
              <tr>
                <th rowspan="2" valign="top">
                  Bookmark name display
            </th>
            <td>
                  <?vsp
                    declare S varchar;

                    S := '';
                    if (cast(get_keyword('chars', self.settings, '0') as integer) = 0)
                      S := 'checked="checked"';
                    http(sprintf('<input type="radio" name="r_chars" id="r_chars_0" value="0" %s />', S));
                  ?>
