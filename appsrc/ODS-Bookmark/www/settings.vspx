                              <![CDATA[
                                declare exit handler for SQLSTATE '*'
                                {
                                  if (__SQL_STATE like 'AB%')
                                  {
                                    self.vc_error_message := BMK.WA.test_clear(__SQL_MESSAGE);
                                    self.vc_is_valid := 0;
                                    return;
