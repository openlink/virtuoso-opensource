                  <?vsp
                    declare S varchar;

                    S := '';
                    if (cast(get_keyword('panes', self.settings, '0') as integer) = 0)
                      S := 'checked="checked"';
                    http(sprintf('<input type="radio" name="r_panes" id="r_panes_0" value="0" %s />', S));
                  ?>
