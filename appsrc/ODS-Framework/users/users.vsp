                            <?vsp
                              items := vLists[1];
                              foreach (any item in items) do
                                http (sprintf('<option %s>%s</option>', case when (item = xpath_eval ('string (/user/homeCountry)', vXml)) then 'selected="selected"' else '' end, item));
                            ?>
                          </select>
                        </td>
                      </tr>
